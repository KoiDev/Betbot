<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/live_list_rl"
    android:layout_width="80dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    >

    <ImageView
        android:id="@+id/live_games_list_img"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:src="@drawable/football"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/live_games_list_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Football"
        android:maxLines="1"
        android:textSize="14sp"
        android:layout_below="@id/live_games_list_img"
        android:textColor="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/live_games_list_select"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/triangle_rv_game"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

</RelativeLayout>