<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/live_all_games_favorite_cv"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/live_all_games_favorite_img"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="5dp"
        android:layout_height="20dp"
        android:src="@drawable/de_flag"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/live_all_games_favorite_ligua_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Алжир. Кубок Алжира"
        android:layout_toEndOf="@id/live_all_games_favorite_img"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/live_all_games_favorite_mycount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/live_all_games_favorite_count"
        android:layout_centerVertical="true"
        android:padding="2dp"
        android:background="@drawable/round_up_btn_red"
        android:text="1"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/live_all_games_favorite_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="8dp"
        android:padding="2dp"
        android:background="@drawable/round_up_btn_grey"
        android:text="5"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentBottom="true"
            android:background="#bebebe"/>
</RelativeLayout>