<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin_sign_in"
    android:paddingRight="@dimen/activity_horizontal_margin_sign_in"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroun_signin"
    tools:context="ru.gmgspb.betbot.registration.view.RegistrationActivity">

    <ImageView
        android:id="@+id/sign_logo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="25dp"
        android:layout_gravity="center"
        android:src="@drawable/imgv_logo"
        android:contentDescription="@string/app_signig.txtedit.login"
        android:visibility="invisible"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColorHint="#fff"
        >

        <EditText
            android:id="@+id/reg_edittxt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:hint="@string/app_signig.txtedit.login"
            android:textColor="#fff"
            android:textSize="22sp"
            />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/reg_btn_correctlogin"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textAllCaps="false"
        android:textColor="#6091c0"
        android:background="@drawable/btn_correct_login"
        android:text="@string/app_reg.btn.correctlogin"
        android:textSize="22sp"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColorHint="#fff"
        >

        <EditText
            android:id="@+id/reg_edittxt_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:maxLines="1"
            android:hint="@string/app_signig.txtedit.pass"
            android:textColor="#fff"
            android:textSize="22sp"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColorHint="#fff"
        >

        <EditText
            android:id="@+id/reg_edittxt_reppass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:hint="@string/app_signig.txtedit.replogin"
            android:textColor="#fff"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:textColorHint="#fff"
        >

        <EditText
            android:id="@+id/reg_edittxt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:hint="@string/app_forgotpas.edittxt.email"
            android:textColor="#fff"
            android:textSize="22sp"
            />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/reg_btn_registration"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_register_notactive"
        android:text="@string/app_reg.btn.registr"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:textColor="#f44336"
        />

</LinearLayout>
