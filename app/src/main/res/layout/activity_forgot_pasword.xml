<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgot_pasword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroun_signin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin_sign_in"
    android:paddingRight="@dimen/activity_horizontal_margin_sign_in"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.gmgspb.betbot.registration.view.ForgotPasword_Activity">

    <ImageView
        android:id="@+id/forgotpas_logo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="80dp"
        android:layout_gravity="center"
        android:src="@drawable/imgv_logo"
        android:contentDescription="@string/app_signig.txtedit.login"
        android:visibility="invisible"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#fff"
        >
        <EditText
            android:id="@+id/forgotpas_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:hint="@string/app_forgotpas.edittxt.email"
            android:textColor="#fff"
            android:textSize="22sp"
            />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="@string/app_forgotpas.txt.infoemail"
        android:textAllCaps="false"
        android:textColor="#6091c0"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/forgotpas_sendbattn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:text="@string/app_forgotpas.btn.send"
        android:textSize="22sp"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:background="@drawable/btn_forgot_pass_noactive"
        />
</LinearLayout>
