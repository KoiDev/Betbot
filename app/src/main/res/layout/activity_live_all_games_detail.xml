<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_live_all_games_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.gmgspb.betbot.live.view.LiveAllGamesDetail"
    android:background="#e1e1e1">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="#bebebe"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/dialogforecasts_subback6">

        <ImageView
            android:id="@+id/live_all_games_detail_header_img"
            android:layout_width="30dp"
            android:layout_alignParentLeft="true"
            android:paddingLeft="5dp"
            android:layout_height="20dp"
            android:src="@drawable/de_flag"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/live_all_games_detail_header_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/live_all_games_detail_header_img"
            android:text="Австрия. Премьер-лига"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#bebebe"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/dialogforecasts_subback6">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>

</LinearLayout>
