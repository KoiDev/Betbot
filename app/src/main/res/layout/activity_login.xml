<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin_sign_in"
    android:paddingRight="@dimen/activity_horizontal_margin_sign_in"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.gmgspb.betbot.registration.view.LoginActivity"
    android:background="@drawable/backgroun_signin"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sign_logo"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:src="@drawable/imgv_logo"
        android:contentDescription="@string/app_signig.txtedit.login"
        android:visibility="invisible"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:textColorHint="#fff"
        >

        <EditText
            android:id="@+id/sign_edittxt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:hint="@string/app_signig.txtedit.login"
            android:textColor="#fff"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:textColorHint="#fff"
        >

        <EditText
            android:id="@+id/sign_edittxt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:maxLines="1"
            android:hint="@string/app_signin.txtedit.password"
            />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/sign_btn_login"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/btn_signin"
        android:text="@string/app_signin.btn.sign"
        android:onClick="forecastActivity"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:textColor="#fff"
        />

    <Button
        android:id="@+id/sign_btn_returnpass"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="@string/app_signin.btn.backup_password"
        android:background="@android:color/transparent"
        android:onClick="forgotPasswordActivity"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:textColor="#fff"
        />

    <Button
        android:id="@+id/sign_btn_regist"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/btn_register_notactive"
        android:text="@string/app_signin.btn.register"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:textColor="#f44336"
        android:onClick="registerActivity"
        />

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="@string/app_signin.txt.or"
        android:textSize="22sp"
        android:background="@android:color/transparent"
        android:textColor="#fff"
        />

    <Button
        android:id="@+id/sign_btn_gogoole"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/btn_register_google"
        android:paddingLeft="20dp"
        android:drawableLeft="@mipmap/ic_google"
        android:text="@string/app_signin.btn.signin_google"
        android:textAllCaps="false"
        android:textColor="#8e8e93"
        android:textSize="22sp" />

</LinearLayout>
